{
  "private": true,
  "name": "@MochiNoaProject/homepage",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --template src/template.html && node scripts/insert-mochinoa-aa-to-html",
    "build:gh": "GITHUB_PAGES=homepage preact build --template src/template.html && dot-json ./build/manifest.json start_url \"/homepage/\"",
    "serve": "preact build --template src/template.html && sirv build --port 8080 --cors --single",
    "dev": "preact watch --template src/template.html",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "preact": "^10.4.5",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.9",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.2.0",
    "@types/node": "^14.0.14",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "css-loader": "^1.0.1",
    "dot-json": "^1.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-next.19",
    "prettier": "^2.0.5",
    "sirv-cli": "^1.0.0-next.3",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.6",
    "typings-for-css-modules-loader": "^1.7.0"
  }
}
